rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isDentist() {
      return hasRole('dentist');
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isConnectedDentist(patientId) {
      return isDentist() && 
             exists(/databases/$(database)/documents/connections/$(patientId + '_' + request.auth.uid)) &&
             get(/databases/$(database)/documents/connections/$(patientId + '_' + request.auth.uid)).data.status == 'active';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can update their own profile (except role)
      allow update: if isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'id', 'createdAt']);
      
      // Only allow creation through Cloud Functions
      allow create: if false;
      allow delete: if false;
    }
    
    // Dentist profiles
    match /dentistProfiles/{profileId} {
      // Anyone can read dentist profiles (public listing)
      allow read: if true;
      
      // Only the dentist can update their profile
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      
      allow create, delete: if false;
    }
    
    // Scans collection
    match /scans/{scanId} {
      // Owner can read their scans
      allow read: if isOwner(resource.data.userId) || 
                     isConnectedDentist(resource.data.userId) ||
                     isAdmin();
      
      // Owner can create scans
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // Owner can update status to 'archived'
      allow update: if isOwner(resource.data.userId) && 
                       request.resource.data.status == 'archived';
      
      allow delete: if false;
    }
    
    // Analysis results
    match /analysisResults/{resultId} {
      // Read if owner of the scan or connected dentist
      allow read: if isAuthenticated() && (
                     get(/databases/$(database)/documents/scans/$(resource.data.scanId)).data.userId == request.auth.uid ||
                     isConnectedDentist(get(/databases/$(database)/documents/scans/$(resource.data.scanId)).data.userId) ||
                     isAdmin()
                   );
      
      // Only Cloud Functions can create/update
      allow create, update, delete: if false;
    }
    
    // Dentist reviews
    match /dentistReviews/{reviewId} {
      // Owner of scan or the reviewing dentist can read
      allow read: if isAuthenticated() && (
                     get(/databases/$(database)/documents/scans/$(resource.data.scanId)).data.userId == request.auth.uid ||
                     resource.data.dentistId == request.auth.uid
                   );
      
      // Connected dentist can create review
      allow create: if isDentist() && 
                       request.resource.data.dentistId == request.auth.uid &&
                       isConnectedDentist(get(/databases/$(database)/documents/scans/$(request.resource.data.scanId)).data.userId);
      
      // Reviewing dentist can update their own review
      allow update: if isDentist() && 
                       resource.data.dentistId == request.auth.uid;
      
      allow delete: if false;
    }
    
    // Patient-Dentist connections
    match /connections/{connectionId} {
      // Both parties can read
      allow read: if isAuthenticated() && (
                     resource.data.patientId == request.auth.uid ||
                     resource.data.dentistId == request.auth.uid
                   );
      
      // Patient can create connection request
      allow create: if isAuthenticated() && 
                       request.resource.data.patientId == request.auth.uid &&
                       request.resource.data.status == 'pending';
      
      // Dentist can accept/decline, patient can terminate
      allow update: if isAuthenticated() && (
                       (resource.data.dentistId == request.auth.uid && 
                        request.resource.data.status in ['active', 'declined']) ||
                       (resource.data.patientId == request.auth.uid && 
                        request.resource.data.status == 'terminated')
                     );
      
      allow delete: if false;
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow update: if isOwner(resource.data.userId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
      allow create, delete: if false;
    }
    
    // Audit logs (admin only)
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow create, update, delete: if false;
    }
  }
}
